extends ../layout

block title 
    title Panier

block contenu 
    h1 Votre panier
    table.table.table-striped.align-middle
        thead 
            tr
                th #id 
                th nom 
                th image 
                th prix unitaire 
                th quantit√© 
                th action 
                th total 
        tbody 
            for item in panier 
                tr
                    td #{item.id}
                    td #{item.nom}
                    td  
                        img(src=`${item.image}` alt="" , width="100")
                    td #{item.prix} 
                    td
                        form.d-flex.align-items-center 
                            button.btn.btn-primary.btn-sm -
                            input(type="text" value=`${item.quantite}` style="width:30px" class="text-center mx-2")
                            button.btn.btn-primary.btn-sm +
                    td 
                        button.btn.btn-danger.btn-sm supprimer 
                    td #{item.total} 
        tfoot 
            tr 
                td(colspan="6" class="text-end") total panier 
                td #{total}