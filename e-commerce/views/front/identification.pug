extends ../layout

block title 
    title S'identifier

block contenu 
    h1.mb-5 vous identifiez !
    .row
        .col
            h2.text-center.mb-4 créer un profil client
            form(action="/add/user" method="POST" enctype="multipart/form-data")
                include ../form
                .mb-3
                    input(type="file" class="form-control" placeholder="image" name="image")
                .mb-3.text-center
                    input(type="submit" class="btn btn-success")
        .col
            h2.text-center.mb-4 se connecter à un profil existant
            form(action="/connexion-tunnel" method="POST")
                include ../form
                .mb-3.text-center
                    input(type="submit" class="btn btn-info")